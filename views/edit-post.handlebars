<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <input name="post-title" type="text" value="{{post.title}}" />
      <textarea name="content-body" id="content-body"> {{post.post_content}}</textarea>
    </div>
  
  </form>
</article>

  <div id="edit-post-btn-holder">
     <button id="my-btn"  type="submit" class="update-post-btn">Update</button>
     <button id="my-btn" type="button" class="delete-post-btn">Delete</button>
  </div>


<h3> Comments on this Post:</h3>
</br>
{{> comments post.comments}} 



<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>


